{
  "name": "neibrly",
  "version": "1.0.0",
  "description": "neibrly - Connect with your neighbors. A neighborhood community platform.",
  "main": "server/index.js",
  "scripts": {
    "start": "cd server && node railway-start.js",
    "build": "cd client && react-scripts build",
    "build:prod": "react-scripts build && npm run validate-assets && npm run copy-assets",
    "validate-assets": "node scripts/validate-assets.js",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install && npm run build:prod",
    "reset": "node scripts/port-manager.js reset",
    "kill": "node scripts/port-manager.js kill",
    "test-ports": "node scripts/port-manager.js test"
  },
  "keywords": [
    "neibrly",
    "neighborhood",
    "community",
    "chat",
    "neighbors"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
